        <TextBox x:Name="txtTotalCost" HorizontalAlignment="Left" Height="42" Margin="705,476,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="242" FontFamily="Arial" FontSize="18.667"/>
