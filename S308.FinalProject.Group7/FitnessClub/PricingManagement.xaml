<Window x:Name="winPricingManagement" x:Class="FitnessClub.PricingManagement"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FitnessClub"
        mc:Ignorable="d"
        Title="Pricing Management" Height="649" Width="1200" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Image x:Name="imgBackground" Source="Gym Background.jpg" Stretch="Fill" d:IsLocked="True"/>
        <Label x:Name="label_Copy" Content="PRICING MANAGEMENT" HorizontalAlignment="Center" Margin="34,31,596,0" VerticalAlignment="Top" Height="76" Width="564" Foreground="#FFC3B253" FontSize="48" FontFamily="Century Gothic" FontWeight="Bold"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="263" Padding="10" Margin="34,320,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="446" Background="{x:Null}" BorderBrush="White" BorderThickness="5" Foreground="White" FontFamily="Century Gothic" FontSize="24"/>
        <ComboBox x:Name="cmbMembershipType" HorizontalAlignment="Left" Margin="315,155,0,0" VerticalAlignment="Top" Width="283" Height="36" Background="White" FontFamily="Century Gothic" FontSize="26.667"/>
        <Label x:Name="lblLastName" Content="Membership Type:" HorizontalAlignment="Left" Margin="34,148,0,0" VerticalAlignment="Top" FontSize="26.667" Foreground="White" FontFamily="Century Gothic"/>
        <Button x:Name="btnMainMenu" Content="MAIN MENU" HorizontalAlignment="Left" Margin="970,31,0,0" VerticalAlignment="Top" Width="183" Background="Black" Foreground="White" BorderBrush="White" BorderThickness="5" Height="50" FontSize="26.667" FontWeight="Bold"/>
        <Label x:Name="lblUpdatePrice" Content="Update Price:" HorizontalAlignment="Left" Margin="659,319,0,0" VerticalAlignment="Top" FontSize="26.667" Foreground="White" FontFamily="Century Gothic"/>
        <Button x:Name="btnTypeCheck" Content="CHECK TYPE" HorizontalAlignment="Left" Margin="166,232,0,0" VerticalAlignment="Top" Width="182" Background="Black" Foreground="White" BorderBrush="White" BorderThickness="5" Height="50" FontSize="26.667" FontWeight="Bold"/>
        <TextBox x:Name="txtUpdatePrice" HorizontalAlignment="Left" Height="36" Margin="885,320,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="239" FontSize="26.667" FontFamily="Century Gothic"/>
        <Label x:Name="lblUpdateAvailablity" Content="Update Availability:" HorizontalAlignment="Left" Margin="584,401,0,0" VerticalAlignment="Top" FontSize="26.667" Foreground="White" FontFamily="Century Gothic"/>
        <ComboBox x:Name="cmbUpdateAvailability" HorizontalAlignment="Left" Margin="885,401,0,0" VerticalAlignment="Top" Width="239" Height="36" Background="White" FontFamily="Century Gothic" FontSize="26.667"/>
        <Button x:Name="btnUpdateType" Content="UPDATE" HorizontalAlignment="Left" Margin="788,492,0,0" VerticalAlignment="Top" Width="182" Background="Black" Foreground="White" BorderBrush="White" BorderThickness="5" Height="50" FontSize="26.667" FontWeight="Bold"/>

    </Grid>
</Window>
