        <Label x:Name="lblEmail" Content="Email Address:" HorizontalAlignment="Left" Margin="23,77,0,0" VerticalAlignment="Top" FontSize="10.667"/>
        <Label x:Name="lblPhoneNumber" Content="Phone Number:" HorizontalAlignment="Left" Margin="186,77,0,0" VerticalAlignment="Top" FontSize="10.667"/>
        <DataGrid x:Name="dataGrid" HorizontalAlignment="Left" Margin="23,162,0,0" VerticalAlignment="Top" Height="103" Width="366"/>
        <Button x:Name="btnClear" Content="Clear" HorizontalAlignment="Left" Margin="314,124,0,0" VerticalAlignment="Top" Width="75"/>
    </Grid>
</Window>
