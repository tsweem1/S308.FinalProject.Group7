<Window x:Name="winMemberInformation" x:Class="FitnessClub.MembershipInformation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FitnessClub"
        mc:Ignorable="d"
        Title="Member Information" Height="316" Width="425">
    <Grid>
        <Label x:Name="lblMemberInformation" Content="Existing Member Search" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <Button x:Name="btnSearch" Content="Search" HorizontalAlignment="Left" Margin="209,124,0,0" VerticalAlignment="Top" Width="75"/>
        <Label x:Name="lblLastName" Content="Last Name:" HorizontalAlignment="Left" Margin="18,48,0,0" VerticalAlignment="Top" FontSize="10.667"/>
        <Label x:Name="lblFirstName" Content="First Name:" HorizontalAlignment="Left" Margin="209,48,0,0" VerticalAlignment="Top" FontSize="10.667"/>
        <Label x:Name="lblEmail" Content="Email Address:" HorizontalAlignment="Left" Margin="18,77,0,0" VerticalAlignment="Top" FontSize="10.667"/>
        <Label x:Name="lblPhoneNumber" Content="Phone Number:" HorizontalAlignment="Left" Margin="209,78,0,0" VerticalAlignment="Top" FontSize="10.667"/>
        <DataGrid x:Name="dataGrid" HorizontalAlignment="Left" Margin="23,162,0,0" VerticalAlignment="Top" Height="103" Width="366"/>
        <Button x:Name="btnClear" Content="Clear" HorizontalAlignment="Left" Margin="314,124,0,0" VerticalAlignment="Top" Width="75"/>
        <TextBox x:Name="txtLastName" HorizontalAlignment="Left" Height="23" Margin="82,48,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtFirstName" HorizontalAlignment="Left" Height="23" Margin="285,48,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtEmail" HorizontalAlignment="Left" Height="23" Margin="101,78,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="101"/>
        <TextBox x:Name="txtPhoneNumber" HorizontalAlignment="Left" Height="23" Margin="314,78,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="91"/>
    </Grid>
</Window>
