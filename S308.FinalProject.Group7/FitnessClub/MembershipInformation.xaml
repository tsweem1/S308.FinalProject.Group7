<Window x:Name="winMemberInformation" x:Class="FitnessClub.MembershipInformation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FitnessClub"
        mc:Ignorable="d"
        Title="Member Information" Height="690" Width="1200" WindowStartupLocation="CenterScreen">
    <Grid Margin="10,54,-761,-102">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="40*"/>
            <ColumnDefinition Width="97*"/>
            <ColumnDefinition Width="679*"/>
            <ColumnDefinition Width="206*"/>
            <ColumnDefinition Width="921*"/>
        </Grid.ColumnDefinitions>
        <Image x:Name="Gym_Background_jpg" Margin="-11,-52,759,99" Source="Gym Background.jpg" Stretch="Fill" Grid.ColumnSpan="5" d:IsLocked="True"/>
        <Label x:Name="lblMemberInformation" Content="EXISTING MEMBER SEARCH" HorizontalAlignment="Left" Margin="23,-24,0,0" VerticalAlignment="Top" FontWeight="Bold" Foreground="#FFC3B253" FontFamily="Century Gothic" Grid.ColumnSpan="3" FontSize="48"/>
        <Button x:Name="btnSearch" Content="SEARCH" HorizontalAlignment="Left" Margin="0,203,0,0" VerticalAlignment="Top" Width="158" FontFamily="Century Gothic" FontSize="24" Height="46" Foreground="White" BorderBrush="White" BorderThickness="5" Background="{x:Null}" FontWeight="Bold" TabIndex="4" Grid.ColumnSpan="2" Grid.Column="1" RenderTransformOrigin="0.468,0.842" Click="btnSearch_Click"/>
        <Label x:Name="lblLastName" Content="Last Name:" HorizontalAlignment="Left" Margin="29,66,0,0" VerticalAlignment="Top" FontSize="26.667" Foreground="White" FontFamily="Century Gothic" Grid.ColumnSpan="3" FontWeight="Bold"/>
        <Label x:Name="lblFirstName" Content="First Name:" HorizontalAlignment="Left" Margin="456,66,0,0" VerticalAlignment="Top" FontSize="26.667" Foreground="White" FontFamily="Century Gothic" Grid.Column="2" RenderTransformOrigin="0.528,0.583" FontWeight="Bold"/>
        <Label x:Name="lblEmail" Content="Email Address:" HorizontalAlignment="Left" Margin="29,130,0,0" VerticalAlignment="Top" FontSize="26.667" Foreground="White" FontFamily="Century Gothic" Grid.ColumnSpan="3" FontWeight="Bold"/>
        <Label x:Name="lblPhoneNumber" Content="Phone Number:" HorizontalAlignment="Left" Margin="456,130,0,0" VerticalAlignment="Top" FontSize="26.667" Foreground="White" FontFamily="Century Gothic" Grid.Column="2" FontWeight="Bold"/>
        <DataGrid x:Name="dtgMemberResults" HorizontalAlignment="Left" Margin="31,273,0,0" Padding ="10" VerticalAlignment="Top" Height="303" Width="1106" RenderTransformOrigin="0.5,0.5" VerticalScrollBarVisibility="Visible" Grid.ColumnSpan="5" BorderBrush="White" BorderThickness ="5" Background="{x:Null}" Foreground="White" FontFamily="Arial" FontSize="18.667">
            <DataGrid.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.128"/>
                    <TranslateTransform/>
                </TransformGroup>
            </DataGrid.RenderTransform>
        </DataGrid>
        <TextBox x:Name="txtLastName" HorizontalAlignment="Left" Height="36" Margin="101,73,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="326" FontFamily="Arial" Grid.Column="2" FontSize="24" TabIndex="0" Text="Doe"/>
        <TextBox x:Name="txtFirstName" HorizontalAlignment="Left" Height="36" Margin="10,73,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="308" FontFamily="Arial" Grid.Column="3" FontSize="24" Grid.ColumnSpan="2" TabIndex="1" Text="John"/>
        <TextBox x:Name="txtEmail" HorizontalAlignment="Left" Height="36" Margin="101,136,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="326" FontFamily="Arial" Grid.Column="2" FontSize="24" TabIndex="2" Text="j.doe@iu.edu"/>
        <TextBox x:Name="txtPhoneNumber" HorizontalAlignment="Left" Height="36" Margin="10,137,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="308" FontFamily="Century Gothic" Grid.Column="3" FontSize="24" Grid.ColumnSpan="2" TabIndex="3" Text="555-555-5555"/>
        <Button x:Name="btnMainMenu" Content="MAIN MENU" Grid.Column="3" HorizontalAlignment="Left" Margin="135,-35,0,692" Width="183" Background="Black" Foreground="White" BorderBrush="White" BorderThickness="5" FontSize="26.667" FontWeight="Bold" FontFamily="Century Gothic" Grid.ColumnSpan="2" TabIndex="8" Height="50" VerticalAlignment="Bottom" Click="btnMainMenu_Click"/>
        <Button x:Name="btnClear" Content="CLEAR" HorizontalAlignment="Left" Margin="101,203,0,0" VerticalAlignment="Top" Width="158" FontFamily="Century Gothic" FontSize="24" Height="46" Foreground="White" BorderBrush="White" BorderThickness="5" Background="{x:Null}" FontWeight="Bold" TabIndex="5" Grid.Column="2" Click="btnClear_Click"/>
        <Button x:Name="btnFitnessGoals" Content="FITNESS GOALS" HorizontalAlignment="Left" Margin="514,203,0,0" VerticalAlignment="Top" Width="205" Background="Black" Foreground="White" BorderBrush="White" BorderThickness="5" Height="46" FontSize="24" FontWeight="Bold" FontFamily="Century Gothic" Grid.ColumnSpan="2" TabIndex="6" Grid.Column="2" Click="btnFitnessGoals_Click"/>
        <Button x:Name="btnPurchaseHistory" Content="PURCHASE HISTORY" HorizontalAlignment="Left" Margin="67,203,0,0" VerticalAlignment="Top" Width="251" Background="Black" Foreground="White" BorderBrush="White" BorderThickness="5" Height="46" FontSize="24" FontWeight="Bold" FontFamily="Century Gothic" Grid.Column="3" TabIndex="7" Grid.ColumnSpan="2" Click="btnPurchaseHistory_Click"/>
    </Grid>
</Window>
